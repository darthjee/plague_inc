<div class="form-group row" ng-controller="Tags.Controller as tc">
  <div class="col-7">
    <input 
       id="tag"
       name="tag"
       class="form-control"
       ng-model="tc.tag"
       placeholder="Tag name"
       type="text" />
  </div>
  <div class="col-1">
    <button ng-click="tc.addTag(<%= ng_model %>)"
        type"submit"
        class="btn btn-secondary">
      +
    </button>
  </div>
</div>
<div class="form-group row">
  <div class="col-7" ng-repeat="tag in <%= ng_model %>">{{tag}}</div>
</div>
