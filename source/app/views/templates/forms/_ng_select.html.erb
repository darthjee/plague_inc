<div class="form-group row align-items-center">
  <label for="<%= field %>" class="col-4 col-form-label text-right"><%= label %></label>
  <div class="col-8">
    <select
      id="<%= field %>"
      name="<%= field %>"
      ng-model="<%= ng_model %>"
      class="form-control"
      ng-class="{'is-invalid': <%= ng_errors %>}">
      <option value="">Select</option>
      <option ng-repeat="option in <%= options %>" value="{{option.<%= reference_key %>}}">
        {{option.<%= text_field %>}}
      </option>
    </select>

    <div class="invalid-feedback d-block mt-1" ng-repeat="error in <%= ng_errors %>">
      {{error}}
    </div>
  </div>
</div>