<nav>
  <ul class="pagination">
    <li class="page-item" ng-show="<%= pagination %>.page > 1">
      <%= angular_safe_link_to(
        path_method, {
          page: "{{ #{pagination}.page-1 }}",
          per_page: "{{ #{pagination}.perPage }}"
        }.merge(options),
        'aria-label' => 'Previous',
        'class' => 'page-link'
      ) do %>
        <span aria-hidden="true">&laquo;</span>
      <% end %>
    </li>
    <li class="page-item" ng-repeat="page in <%= pagination %>.pagination track by $index" class="{{ <%= pagination %>.page == page ? 'active' : '' }}">
      <%= angular_safe_link_to(
        path_method, {
          page: '{{ page }}',
          per_page: "{{ #{pagination}.perPage }}"
        }.merge(options),
        'ng-show' => 'page',
        'class' => 'page-link'
      ) do %>
        {{ page }} <span class="sr-only" ng-show="<%= pagination %>.page == page">(current)</span>
      <% end %>
       <span ng-show="!page" class="page-link disabled">&#8230;</span>
    </li>
    <li class="page-item" ng-show="<%= pagination %>.page < <%= pagination %>.pages">
      <%= angular_safe_link_to(
        path_method, {
          page: "{{ #{pagination}.page + 1 }}",
          per_page: "{{ #{pagination}.perPage }}"
        }.merge(options),
        'aria-label' => 'Next',
        'class' => 'page-link'
      ) do %>
        <span aria-hidden="true">&raquo;</span>
      <% end %>
    </li>
  </ul>
</nav>
