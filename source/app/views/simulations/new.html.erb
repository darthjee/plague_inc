<% bootstrap_form do |form| %>
  <form class="form-horizontal form-simulation-{{gnc.data.algorithm}}">
    <div class="card-deck mb-12 col-lg-12 col-12">
      <div class="card mb-4 shadow-sm col-6">
        <div class="card-header">
          <h4 class="my-0 font-weight-normal">
            New Simulation
          </h4>
        </div>
        <div class="card-body">
          <%= form.input('gnc.data', :name, placeholder: "Simulation name") %>
          <%= form.select('gnc.data', :algorithm, options: Simulation::ALGORITHMS ) %>
          <%= render partial: 'contagion_form', locals: { form: form } %>
          <div class="form-group row">
            <div class="offset-2 col-10">
              <button ng-click="gnc.save()"
                      ng-disabled="gnc.ongoing"
                      type"submit"
                      class="btn btn-primary">
                Save
              </button>
            </div>
          </div>
        </div>
      </div>
      <%= render partial: 'contagion_groups_form', locals: { form: form } %>
    </div>
  </form>
<% end %>
