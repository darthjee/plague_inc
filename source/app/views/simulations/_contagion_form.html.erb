<div class="card mb-4 form-simulation-contagion-block">
  <div class="card-header">
    <h4 class="my-0 font-weight-normal">
      Contagion
    </h4>
  </div>
  <div class="card-body">
    <%= form.input(
      :lethality,
      placeholder: "0.9",
    ) %>
    <%= form.input(
      :days_till_recovery,
      placeholder: "15",
    ) %>
    <%= form.input(:days_till_sympthoms, placeholder: "7", model: 'gnc.data.settings') %>
    <%= form.input(:days_till_start_death, placeholder: "10", model: 'gnc.data.settings') %>
  </div>
</div>
